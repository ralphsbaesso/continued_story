
<% flash.each do |name, msg| %>
  <h1><%= name %></h1>
  <h1><%= msg %></h1>

  <% if msg.class == Array %>
    <% msg.each do |message| %>
      <%= content_tag :div, message, :id => "flash_#{name}" %>
    <% end %>
  <% else %>

    # old code
    <%= content_tag :div, msg, :id => "flash_#{name}" %>

  <% end %>
<% end %>

<h1><%= flash[:error] %></h1>
<h1>meu teste</h1>



<div class="container devise">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div id="first">
        <div class="myform form ">
          <div class="logo mb-3">
            <div class="col-md-12 text-center">
              <h1>Registrar</h1>
            </div>
          </div>

          <%= render 'users/shared/error_messages' %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control", placeholder: "Digite seu Nome", autocomplete: "off" %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                type: "email", class: "form-control", 'aria-describedby': "emailHelp", placeholder: "Enter email", autocomplete: "off" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", 'aria-describedby': "emailHelp", placeholder: "Enter Password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="col-md-12 text-center ">
              <%= f.submit 'Registrar-se', class: "btn btn-block mybtn btn-primary tx-tfm" %>
            </div>
            <hr>
            <div class="form-group">
              <p class="text-center"><%= render "users/shared/links" %></p>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

